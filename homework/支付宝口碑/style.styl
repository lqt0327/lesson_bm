*{
    margin 0
    padding: 0
}

.head
  width: 100vw
  height 40px
  background-color: blue
  display: block

.head .area
  color #ffffff
  width 10%
  height 100%
  text-align: center
  font-size: 20px
  display: flex
  align-items: center
  padding-left: 10px
  float left

.head .find
  border 0px
  border-radius: 3px
  width: 65%
  float left
  display: flex
  align-items: center
  justify-content: center
  height 100%

.head .avatar
    width: 15%
    height 100%
    float left
    text-align: center

.head .avatar img
    height 100%;

.content
    padding 15px
    background-color: #efefef
    width: 100%
    height 100vh
    box-sizing: border-box

.top
    width 100%
    height: 27%
    background-color: #ffffff
    overflow hidden
    padding 15px
    box-sizing: border-box

.swiper-slide > div
    width: 20%
    height: 50%
    float left
    text-align center

.top img 
  height: 30px

.middle
  width: 100%
  height 7%
  margin-top 15px

.middle>div
  display: inline-flex
  height 100%
  width 24%
  align-items: center
  background-color #ffffff
  justify-content: center

.bottom
  margin-top: 15px
  width: 100%
  height: 12%
  overflow hidden
  border-radius: 5px

.bottom img 
  width: 100%
  height auto

.foot
  position: fixed
  bottom: 0;
  background-color: #ffffff
  width: 100vw
  height 8%

.foot > div
  width: 20%
  height 100%
  float left
  text-align: center

.foot img 
  width: auto
  height: 30px





  
  